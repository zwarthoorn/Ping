{
    "name": "Zwarthoorn/Ping",
    "type": "library",
    "description": "a easy package to ping your websites",
    "keywords": [
        "Zwarthoorn",
        "Ping"
    ],
    "homepage": "https://github.com/Zwarthoorn/Ping",
    "license": "MIT",
    "authors": [
        {
            "name": "Walter Wiesnekker",
            "email": "zwarthoorncontact@gmail.com",
            "homepage": "https://github.com/Zwarthoorn",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~7.1",
        "ext-curl": "*",
        "ext-http": "*"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=7.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Zwarthoorn\\Ping\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Zwarthoorn\\Ping\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
